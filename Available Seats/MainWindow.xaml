<Window x:Class="Available_Seats.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Available_Seats"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="424" VerticalAlignment="Top" Width="800">
            <Button HorizontalAlignment="Left" Height="270" Margin="50,0,0,0" VerticalAlignment="Center" Width="300" Click="SayHello" CommandParameter="true" Background="Red">
                <Button.Content>
                    <StackPanel>
                        <TextBlock Text="000" FontSize="185" TextAlignment="Center" Height="300" Width="300" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>
                </Button.Content>
            </Button>
        </Border>

        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="424" VerticalAlignment="Top" Width="800">
            <Button HorizontalAlignment="Left" Height="270" Margin="450,0,0,0" VerticalAlignment="Center" Width="300" Click="SayHello" CommandParameter="false" Background="Lime">
                <Button.Content>
                    <StackPanel>
                        <TextBlock Text="000" FontSize="185" TextAlignment="Center" Height="267" Width="300" TextWrapping="Wrap"/>
                    </StackPanel>
                </Button.Content>
            </Button>

        </Border>

    </Grid>
</Window>
